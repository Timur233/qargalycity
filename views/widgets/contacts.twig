<section id="contacts" class="new-map pb-0 mb-0 pb-lg-6 mb-lg-6">
    <div class="container px-md-0 px-lg-6  mb-6">
      <div class="contacts-content align-items-center d-flex p-4 p-md-5">
        <div class="container position-relative">
          <div class="row">
            <div class="col-12 col-md-10 col-lg-12 mx-auto">
              <h2 class="sectionTitle fw-bolder mb-0 mt-0 mt-md-auto">
                Контакты
              </h2>
              <div class="contacts-info row pt-4 pb-5">
                <div class="col-md-12 mb-md-3 col-lg-4">
                  <a href="tel:{{ site_phone }}" class="contact-item"><i class="fas fa-phone-alt me-2"></i> {{ site_phone }}</a>
                </div>
                <div class="col-md-12 col-lg-8">
                  <span class="contact-item"><i class="fas fa-map-marker-alt me-2"></i> {{ site_adress }}</span>
                </div>
              </div>
            </div>
            <div class="col-md-10 mx-md-auto col-lg-4">
              <div class="callback-form bg-white">
                <h4 class="d-block d-lg-none">{{ translate['callback_title'] }}</h4>
                <form class="mb-0 pe-0 pe-lg-5" action="">
                  <div class="mb-3">
                    <input type="text" class="form-control" id="staticFormName" name="name" placeholder="{{ translate['name'] }}" fieldname="Имя">
                  </div>
                  <div class="mb-3">
                    <input type="text" class="form-control" id="staticFormPhone" name="phone" placeholder="{{ translate['phone'] }}" fieldname="Телефон" required="required">
                  </div>
                  <div class="d-inline-block">
                    <a href="#" class="btn btn-gradient float-start sendFormButton px-4" onclick="frontend.form(this); return false">{{ translate['send'] }}</a>
                  </div>
                </form>
              </div>
            </div>
            <div class="col-md-10 mx-auto col-lg-8">
              <div id="map"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>